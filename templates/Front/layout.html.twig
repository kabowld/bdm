                    console.log(jqXHR);
                    $('.img-rubrique').attr('src', $src);
                    $('.img-rubrique').attr('alt', data.slug);
                });
            } else {
                $('.img-rubrique').attr('src', '');
                $('.img-rubrique').attr('alt', '');
            }
        });

