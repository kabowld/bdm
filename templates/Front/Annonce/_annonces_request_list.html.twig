<div class="row">
    <div class="col-lg-12">
        {% for annonce in annonces %}
            <div class="feat_property list">
                <div class="thumb">
                    {% if not annonce.filePictures.empty %}
                        <img class="img-whp" src="{{ vich_uploader_asset(annonce.filePicture, 'file') }}" alt="{{ annonce.filePicture.fileName }}">
                    {% else %}
                        <img class="img-whp" src="{{ asset('front/images/empty.jpg') }}" alt="aucune image">
                    {% endif %}
                    <div class="thmb_cntnt">
                        <ul class="icon mb0">
                            <li class="list-inline-item"><a href="{{ path('annonce_single_bdmk', {slug: annonce.slug}) }}"><span class="flaticon-transfer-1"></span></a></li>
                            <li class="list-inline-item"><a href="#"><span class="flaticon-heart"></span></a></li>
                        </ul>
                    </div>
                </div>
                <div class="details">
                    <div class="tc_content">
                        <div class="dtls_headr">
                            <ul class="tag">
                                <li class="list-inline-item"><a href="#">For Rent</a></li>
                                <li class="list-inline-item"><a href="#">Featured</a></li>
                            </ul>
                            {% if annonce.price is not null %}
                                <a class="fp_price" href="{{ path('annonce_single_bdmk', {slug: annonce.slug}) }}">{{ annonce.formatPrice }}<small>/mo</small></a>
                            {% endif %}
                        </div>
                        <p class="text-thm">{{ annonce.city.title }}</p>
                        <h4>{{ annonce.category.title }}</h4>
                        <p><span class="flaticon-placeholder"></span>{{ annonce.title }}</p>
                    </div>
                    <div class="fp_footer">
                        <ul class="fp_meta float-left mb0">
                            <li class="list-inline-item"><a href="#"><img src="" alt="pposter1.png"></a></li>
                            <li class="list-inline-item"><a href="#">Ali Tufan</a></li>
                        </ul>
                        <div class="fp_pdate float-right">4 years ago</div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
