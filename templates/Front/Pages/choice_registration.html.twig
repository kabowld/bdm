{% extends 'Front/layout.html.twig' %}

{% block title 'Création de compte' %}


{% block content %}
   <main class="choice_registration">
        <div class="container">
            <h1 class="main_title_ch_r">AKWABA</h1>
            <span class="subtitle_ch_r">Faites le choix de création de votre compte</span>
            <div class="row">
                <div class="col-md-12 col-lg-4 col-sm-12">
                    <div class="pricing_table">
                        <div class="pricing_header">
                            <div class="price">Compte personnel</div>
                        </div>
                        <div class="pricing_content">
                            <ul class="mb0">
                                <li>Dédié uniquement aux particuliers</li>
                                <li>Une interface pour piloter vos annonces</li>
                                <li>Un accès à l’historique de tous vos achats et ventes</li>
                                <li>Des dépôts d’annonces gratuits, simples et rapides</li>
                                <li>Des packs pour mettre en évidence vos annonces </li>
                            </ul>
                        </div>
                        <div class="pricing_footer">
                            <a class="btn pricing_btn btn-block" href="{{ path('registration_bdmk') }}">Allez - y</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-lg-4 col-sm-12">
                    <div class="img-welcome">
                        <img class="welcome" src="{{ asset('front/images/welcome.png') }}" alt="Bienvenue sur Bandama Market"/>
                    </div>
                </div>
                <div class="col-md-12 col-lg-4 col-sm-12">
                    <div class="pricing_table">
                        <div class="pricing_header">
                            <div class="price">Compte professionel</div>
                        </div>
                        <div class="pricing_content">
                            <ul class="mb0">
                                <li>Dédié aux professionnels, entreprises ou associations</li>
                                <li>Visibilité du nombre de vues sur vos annonces</li>
                                <li>Statistiques sur la performance de vos annonces </li>
                                <li>Des packs à plusieurs niveaux pour une meilleure visibilité </li>
                                <li>Des services pour promouvoir votre entreprise</li>
                            </ul>
                        </div>
                        <div class="pricing_footer">
                            <a class="btn pricing_btn btn-block" href="{{ path('registration_pro_bdmk') }}">Allez - y</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   </main>
{% endblock %}
