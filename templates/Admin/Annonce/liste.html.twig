{% extends 'Front/layout.html.twig' %}

{% block title 'Liste des annonces' %}

{% block content %}
    <section class="header-box-admin">
        <div class="container">
            <h1 class="title-hbx-admin">
                Mes annonces
            </h1>
        </div>
    </section>
    <main class="main-annonce">
        <div class="container">
            <a href="{{ path('admin_annnonce_add_bdmk') }}" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i> DÃ©poser une annonce</a>
            <div class="table-responsive">
                <table id="annonce-list" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Date d'ajout</th>
                            <th>Titre</th>
                            <th>Etat</th>
                            <th>Prix</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for annonce in annonces %}
                    <tr>
                        <td>{{ annonce.createdAt|date('Y-m-d') }}</td>
                        <td>{{ annonce.title|slice(0, 15) }}</td>
                        <td>{{ annonce.state.title }}</td>
                        <td>{{ annonce.price }}</td>
                        <td>
                            <a href="{{ path('admin_annnonce_edit_bdmk', {id: annonce.id})}}" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i> </a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
{% endblock %}
