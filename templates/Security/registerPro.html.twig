{% extends 'Front/layout.html.twig' %}

{% block title 'Créez votre compte professionnel' %}

{% block content %}
    <main class="main-register">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-8 col-lg-8">
                    <div class="form_register">
                        <div class="heading">
                            <h3 class="text-center">Créer votre compte professionnel</h3>
                            <p class="text-center">Avez-vous déjà un compte ? <a class="text-thm" href="{{ path('login_bdmk') }}">Connectez-vous !</a></p>
                        </div>
                        <div class="details">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="form-group col-md-12">
                                    {{ form_label(form.civility) }}
                                    {{ form_widget(form.civility) }}
                                    {{ form_errors(form.civility) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    {{ form_label(form.siret) }}
                                    {{ form_widget(form.siret) }}
                                    {{ form_errors(form.siret) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-md-6">
                                    {{ form_label(form.societyName) }}
                                    {{ form_widget(form.societyName) }}
                                    {{ form_errors(form.societyName) }}
                                </div>
                                <div class="form-group col-md-6 col-sm-12">
                                    {{ form_label(form.rubrique) }}
                                    {{ form_widget(form.rubrique) }}
                                    {{ form_errors(form.rubrique) }}
                                </div>
                                <div class="form-group col-md-6 col-sm-12">
                                    {{ form_label(form.tel) }}
                                    {{ form_widget(form.tel) }}
                                    {{ form_errors(form.tel) }}
                                </div>
                                <div class="form-group col-md-6 col-sm-12">
                                    {{ form_label(form.city) }}
                                    {{ form_widget(form.city) }}
                                    {{ form_errors(form.city) }}
                                </div>
                                <div class="form-group col-md-6 col-sm-12">
                                    {{ form_label(form.adresse) }}
                                    {{ form_widget(form.adresse) }}
                                    {{ form_errors(form.adresse) }}
                                </div>
                                <div class="form-group col-md-6 col-sm-12">
                                    {{ form_label(form.name) }}
                                    {{ form_widget(form.name) }}
                                    {{ form_errors(form.name) }}
                                </div>
                                <div class="form-group col-md-6 col-sm-12">
                                    {{ form_label(form.firstname) }}
                                    {{ form_widget(form.firstname) }}
                                    {{ form_errors(form.firstname) }}
                                </div>
                                <hr />
                                <div class="form-group col-md-6 col-lg-6 col-sm-12">
                                    {{ form_label(form.email) }}
                                    {{ form_widget(form.email) }}
                                    {{ form_errors(form.email) }}
                                </div>
                                <div class="form-group fx-passwd col-md-6 col-lg-6 col-sm-12">
                                    {{ form_label(form.password.first) }}
                                    {{ form_widget(form.password.first) }}
                                    {{ form_errors(form.password.first) }}
                                    <div class="eye-icon-passwd-pro-register"><i class="fa fa-eye"></i> </div>
                                    <ul class="rgx-passwd mt10">
                                        <li class="rgx-ph"><img src="{{ asset('front/images/tick.png') }}" alt="tick"> 8 caractères minimum</li>
                                        <li class="rgx-ph"><img src="{{ asset('front/images/tick.png') }}" alt="tick"> 1 chiffre minimum</li>
                                        <li class="rgx-ph"><img src="{{ asset('front/images/tick.png') }}" alt="tick"> 1 lettre minuscule minimum</li>
                                        <li class="rgx-ph"><img src="{{ asset('front/images/tick.png') }}" alt="tick"> 1 lettre majuscule minimum</li>
                                        <li class="rgx-ph"><img src="{{ asset('front/images/tick.png') }}" alt="tick"> 64 caractères maximum</li>
                                    </ul>
                                </div>
                                <div class="form-group fx-passwd col-md-6 col-lg-6 col-sm-12">
                                    {{ form_label(form.password.second) }}
                                    {{ form_widget(form.password.second) }}
                                    {{ form_errors(form.password.second) }}
                                    <div class="eye-icon2-passwd-pro-register"><i class="fa fa-eye"></i> </div>
                                    <div class="actly-passwd mt10">
                                        <i class="fa fa-exclamation-triangle" ></i> Les mots de passe doivent correspondre
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    {{ form_widget(form.save) }}
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block footer %}
    {% include 'Front/Inc/footer_copyright.html.twig' %}
{% endblock %}
