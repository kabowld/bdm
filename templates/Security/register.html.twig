{% extends 'Front/layout.html.twig' %}

{% block title 'S\'inscrire' %}

{% block content %}
    <main class="main-register">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-6">
                    <div class="form_register">
                        <div class="heading">
                            <h3 class="text-center">Créer votre compte</h3>
                            <p class="text-center">Avez-vous déjà un compte ? <a class="text-thm" href="{{ path('login_bdmk') }}">Se connecter</a></p>
                        </div>
                        <div class="details">
                            {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_label(form.email) }}
                                    {{ form_widget(form.email) }}
                                    {{ form_errors(form.email) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.password.first) }}
                                    {{ form_widget(form.password.first) }}
                                    {{ form_errors(form.password.first) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.password.second) }}
                                    {{ form_widget(form.password.second) }}
                                    {{ form_errors(form.password.second) }}
                                </div>
                                {{ form_widget(form.save) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block footer %}
    {% include 'Front/Inc/footer_copyright.html.twig' %}
{% endblock %}
