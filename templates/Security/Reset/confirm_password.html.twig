{% extends 'Front/layout.html.twig' %}

{% block title 'Réinitialiser mot de passe' %}

{% block content %}
    <main class="main-register">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-4">
                    <div class="form_register">
                        <div class="heading">
                            <h3 class="text-center">Réinitialiser votre mot de passe</h3>
                        </div>
                        <div class="details">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="form-group col-md-12">
                                    {{ form_label(form.password.first) }}
                                    {{ form_widget(form.password.first) }}
                                    {{ form_errors(form.password.first) }}
                                </div>
                                <div class="form-group col-md-12">
                                    {{ form_label(form.password.second) }}
                                    {{ form_widget(form.password.second) }}
                                    {{ form_errors(form.password.second) }}
                                </div>
                                <div class="col-md-12">
                                    {{ form_widget(form.save) }}
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 offset-lg-2 bx-rvc-pss">
                    <div class="bx-rcv-psswd">
                        <img src="{{ asset('front/images/recovery-password.png') }}" alt="mot de passe oublié" class="img-rcv-psswd">
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
